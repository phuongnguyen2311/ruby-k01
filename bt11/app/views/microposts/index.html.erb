<%=javascript_include_tag('manager/micropost.js') %>

<% provide :title, "Microposts" %>
<p id="notice"><%= notice %></p>

<h1>Microposts</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th style="margin:10px">User_Id</th>
      <th> Content</th>
      <th> action</th>
    </tr>
  </thead>

  <tbody>
    <div style="justify-content: flex-end; display: flex;"> 
       <input  class="content">
        <a style="background-color: #82b8e6;" href="/microposts" class="btn_search"> search </a>
    </div>
    <% @microposts.each do |micropost| %>
      <tr scope="row">
        <td><%= micropost.user_id %></td>
        <td><%= micropost.content %></td>
        <td >
          <%= link_to 'Show', micropost %>
          <%= link_to 'Edit', edit_micropost_path(micropost) %>
          <%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Micropost', new_micropost_path %>
