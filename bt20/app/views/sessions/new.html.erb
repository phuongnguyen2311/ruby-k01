<%= stylesheet_link_tag 'login', media: 'all', 'data-turbolinks-track': 'reload' %>
<% provide :title, "Login" %>
<div class="global-container">
	<div class="card login-form">
	<div class="card-body">
        
	   <h3 class="card-title text-center"><%=I18n.t("headers.login") %></h3>
		<div class="card-text">
			<!--
			<div class="alert alert-danger alert-dismissible fade show" role="alert">Incorrect username or password.</div> -->
			<form action='<%= login_path %>' method="post">
                    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
				<div class="form-group">
					<label for="email"><%= I18n.t("login.email_address") %></label>
					<input type="email" placeholder=<%= I18n.t("login.email_address") %> class="form-control form-control-sm" id="email" name="email" aria-describedby="emailHelp">
				</div>

				<div class="form-group">
					<label for="password"><%= I18n.t("login.password") %></label>
					<input type="password" placeholder= <%= I18n.t("login.password") %> class="form-control form-control-sm" id="password" name="password">
				</div>
				<button type="submit" class="btn btn-primary btn-block"><%= I18n.t("login.sign_in") %></button>
				</br>
				<div class="form-group">
					<label class="form-check-label" for="remember_me">
					 <%= I18n.t("login.save_password") %>
					<input class="form-check-input" type="checkbox" value="on" id="flexCheckDefault" name="remember_me">
					</label>
				</div>
				<a href=<%=new_password_reset_path%> style="float:right;font-size:12px;"><%= I18n.t("login.Forgot_password") %></a>
				<div class="sign-up">
					<%= I18n.t("login.Don't_have_an_account") %> <a href=<%=register_path%> ><%= I18n.t("login.create one") %></a>
				</div>	
			</form>
		   <%= button_to "Log in with Google", '/auth/google_oauth2' %>
		</div>
	</div>
</div>
</div>
