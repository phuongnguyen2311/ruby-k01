<%= form_with(model: user) do |form| %>
 <%= render "shared/error_messages" %>
<div class="field">
    <%= form.label I18n.t("users.Name") %>
    <%= form.text_field :name , class: "form-control"%>
  </div>

  <div class="field">
      <%= form.label I18n.t("users.Email")  %>
      <%= form.text_field :email , class: "form-control"%>
    </div>
  <div class="field">
      <%= form.label I18n.t("users.Age")  %>
      <%= form.text_field :age, class: "form-control"%>
    </div>

  <div class="field">
      <%= form.label I18n.t("users.Phone") %>
      <%= form.text_field :phone, class: "form-control"%>
   </div>

  <div class="field">
      <%= form.label I18n.t("users.Birthday") %>
      <%= form.text_field :date_of_birth, class: "form-control" %>
  </div>

  <div class="field">
      <%= form.label I18n.t("users.Password")  %>
      <%= form.password_field :password  ,class: "form-control"%>
  </div>

  <div class="field">
      <%= form.label  I18n.t("users.Confirm Password") %>
      <%=  form.password_field :password_confirmation  ,class: "form-control" %>
  </div>

  <div class="field">
    <%= form.radio_button :gender, false %> <%= I18n.t('users.female')%>
  </div>
  
 <div class="field">
    <%= form.radio_button :gender, true %> <%= I18n.t('users.male')%>  
  </div>

  <div class="actions">
    <%= form.submit I18n.t('actions.update'), class: "btn btn-primary" %>
  </div>
<% end %>
