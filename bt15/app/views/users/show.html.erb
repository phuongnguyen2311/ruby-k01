<% provide :title, 'Show user' %>
<div class="row">
  <div class="col-lg-4 col-xlg-3 col-md-5">
      <div class="card" style=" justify-content: center; display: flex; margin-top: 52px;">
          <div class="card-block">
              <div class="m-t-30">
                   <%= gravatar_for @user  %>
                  <h4 class="card-title m-t-10"><%= @user.name %></h4>
                  <h6 class="card-subtitle" style="font-size: 17px"><%=@user&.admin ?  I18n.t("roles.Admin")  : I18n.t("roles.Member")  %></h6>
                  <%# <div class="row text-center justify-content-md-center">
                      <div class="col-4"><a href="javascript:void(0)" class="link"><i class="icon-people"></i> <font class="font-medium">254</font></a></div>
                      <div class="col-4"><a href="javascript:void(0)" class="link"><i class="icon-picture"></i> <font class="font-medium">54</font></a></div>
                  </div> %>
              </div>
          </div>
      </div>
  </div>
  <div class="col-lg-8 col-xlg-9 col-md-7">
      <div class="card">
          <div class="card-block">
              <form class="form-horizontal form-material">
                  <div class="form-group">
                      <label class="col-md-12"><%= I18n.t("users.Name") %></label>
                      <div class="col-md-12">
                          <div class="form-control form-control-line"> <%= @user.name %> </div>
                      </div>
                  </div>
                  <div class="form-group">
                      <label for="example-email" class="col-md-12"><%= I18n.t("users.Email") %></label>
                      <div class="col-md-12">
                          <div class="form-control form-control-line"> <%= @user.email %> </div>
                      </div>
                  </div>
                  <div class="form-group">
                      <label class="col-md-12"><%= I18n.t("users.Phone") %></label>
                      <div class="col-md-12">
                          <div class="form-control form-control-line"> <%= @user.phone %> </div>
                      </div>
                  </div>
                  <div class="form-group">
                      <label class="col-md-12"><%= I18n.t("users.Age") %></label>
                      <div class="col-md-12">
                         <div class="form-control form-control-line"> <%= @user.age %> </div>
                      </div>
                  </div>
                  <div class="form-group">
                      <label class="col-md-12"><%= I18n.t("users.Birthday") %></label>
                      <div class="col-md-12">
                         <div class="form-control form-control-line"> <%= @user.date_of_birth %> </div>
                      </div>
                  </div>
                  <div class="form-group">
                      <label class="col-sm-12"></label>
                      <div class="col-sm-12">
                            <strong><%= I18n.t("microposts.content") %> </strong>
                            <% @microposts.each do |micro| %>
                              <p> 
                                <%= micro.content%>
                            </p>
                          <% end %>
                       </div>
                  </div>
                  <div class="form-group">
                      <div class="col-sm-12">
                            <%= link_to '<button class="btn btn-primary-color"> <i class="fa fa-edit">  </i> </button>'.html_safe , edit_user_path(@user), style: 'color:#FFFFFF' %>
                            <%= link_to '<button class="btn btn-primary"> <i class="fa fa-home"> </i> </button>'.html_safe , users_path, style: 'color:#FFFFFF' %>
                      </div>
                  </div>
              </form>
          </div>
      </div>
  </div>
</div>
