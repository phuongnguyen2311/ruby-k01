<%=javascript_include_tag('manager/user.js') %>

<p id="notice"><%= notice %></p>

<h1><%= t("users.index.user")%></h1>
<div  class="float-right">
 <div> 
  <input name="email" class="email">
  <a href="#" class="btn_search"> <%= t("users.index.search")%> </a>
 </div>
</div>
<table class="table">
  <thead>
    <tr>
      <th scope="col"> <%= t("users.index.name")%></th>
      <th scope="col"><%= t("users.index.email")%></th>
      <th scope="col"><%= t("users.index.phone")%></th>
      <th scope="col"><%= t("users.index.age")%></th>
      <th scope="col"><%= t("users.index.birth")%></th>
      <th scope="col"><%= t("users.index.gender")%></th>
      <th scope="col"><%= t("users.index.school")%></th>
      <th scope="col"><%= t("users.index.status")%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.age %></td>
        <td><%= user.date_of_birth %></td>
        <td><%= user.gender %></td>
        <td><%= user.school %></td>
        <td><%= user.activated %></td>
        <td><%= link_to t("users.index.show"), user %></td>
        <td><%= link_to t("users.index.edit"), edit_user_path(user) %></td>
        <td><% if current_user.admin? && !current_user?(user) %>
          <%= link_to t("users.index.delete"), user, method: :delete, data: {confirm: "You sure?"} %>
          <% end %>
        </td>
      </tr>
    <% end %>
    <%= will_paginate @users,
    :previous_label => t("will_paginate.previous_label"),
    :next_label => t("will_paginate.next_label")%>
  </tbody>
</table>

<br>
<%= link_to t("users.index.new_user"), new_user_path %>
