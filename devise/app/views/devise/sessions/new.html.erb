<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100">
      <%= form_for(resource, as: resource_name,  :html => {:class => 'login100-form validate-form'}, url: session_path(resource_name)) do |f| %>
        <span class="login100-form-title p-b-43">
          Login to continue
        </span>
         
        <div class="container-fluid">
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
        </div>
        
        <div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
          <%= f.text_field :email, autofocus: true, class: "input100" %>
          <span class="focus-input100"></span>
          <span class="label-input100">Email</span>
        </div>
        
        
        <div class="wrap-input100 validate-input" data-validate="Password is required">
          <%= f.password_field :password, autocomplete: "off", class: "input100" %>
          <span class="focus-input100"></span>
          <span class="label-input100">Password</span>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="flex-sb-m w-full p-t-3 p-b-32">
            <div class="contact100-form-checkbox">
              <%= f.check_box :remember_me, class: "input-checkbox100", id: "ckb1" %>
              <%= f.label :remember_me, class: "label-checkbox100" %>
            </div>
        <% end -%>
          <div>
            <a href="#" class="txt1">
              Forgot Password?
            </a>
          </div>
        </div>
    

        <div class="container-login100-form-btn">
          <%= f.submit "Log in", class: "login100-form-btn" %>
        </div>
        
        <div class="text-center p-t-46 p-b-20">
          <span class="txt2">
            <a href = "<%= new_user_registration_path %>">
            or sign up using
            </a>
          </span>
        </div>

        <div class="login100-form-social flex-c-m">
          <%= link_to  user_facebook_omniauth_authorize_path, method: :post, class: 'login100-form-social-item flex-c-m bg1 m-r-5' do %>
            <i class="fa fa-facebook-f" aria-hidden="true"></i>
          <% end %>
            <a href="#" class="login100-form-social-item flex-c-m bg2 m-r-5">
            <i class="fa fa-twitter" aria-hidden="true"></i>
          </a>
        </div>
        <% end %>
      <div class="login100-more" style="background-image: url('/Login/images/bg-01.jpg');">
      </div>
    </div>
  </div>
</div>

