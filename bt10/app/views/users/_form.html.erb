<%= form_with(model: user) do |form| %>
 <%= render "shared/error_messages" %>
<div class="field">
    <%= form.label :name %>
    <%= form.text_field :name   ,class: "form-control"%>
  </div>

  <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email  ,class: "form-control"%>
    </div>
  <div class="field">
      <%= form.label :age %>
      <%= form.text_field :age  ,class: "form-control"%>
    </div>

  <div class="field">
      <%= form.label :phone %>
      <%= form.text_field :phone  ,class: "form-control"%>
   </div>

  <div class="field">
      <%= form.label :Birthday %>
      <%= form.text_field :date_of_birth ,class: "form-control" %>
  </div>

  <div class="field">
      <%= form.label :password %>
      <%= form.text_field :password  ,class: "form-control"%>
  </div>

  <div class="field">
      <%= form.label :password_confirmation %>
      <%=  form.password_field :password_confirmation  ,class: "form-control" %>
  </div>

  <div class="field">
    <%= form.radio_button :gender, false %> Female
  </div>
  
 <div class="field">
    <%= form.radio_button :gender, true %> Male  
  </div>

  <div class="actions">
    <%= form.submit "Update user",class: "btn btn-primary" %>
  </div>
<% end %>
